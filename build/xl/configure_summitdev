module unload clang gnu pgi xlf cuda kokkos cmake
module load cmake
module load cuda
module load xl


rm -rf CMake*

cmake                                   \
   -D CMAKE_BUILD_TYPE=Release          \
   -D CMAKE_C_COMPILER=xlc              \
   -D CMAKE_CXX_COMPILER=xlc++          \
   -D CMAKE_CXX_FLAGS_RELEASE="-O4 -DNDEBUG" \
   -D CXX_STD=11                        \
   -D USE_OPENACC=0                     \
   -D USE_OPENMP=1                      \
   -D USE_KOKKOS=0                      \
      -D KOKKOS_DIRECTORY=${KOKKOS_DIR} \
      -D KOKKOS_WRAPPER=${KOKKOS_DIR}/bin/nvcc_wrapper \
   -D USE_CUDA=1                        \
      -D CUDA_FLAGS="-arch compute_52"  \
   ../src

